@model WebStorage.Domain.Entities.AppUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="logform">    
    @Html.ValidationSummary()
    @using (Html.BeginForm("Edit", "Manager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label class="col-md-4 control-label" style="color:coral">@Model.UserName</label>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" style="color:white">Е-мейл</label>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>            
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" style="color:white">Пароль</label>
            <div class="col-md-4">
                <input name="password" type="password" class="form-control" />
            </div>              
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <button type="submit" class="btn btn-success">Сохранить</button>
                @Html.ActionLink("Отмена", "Index", "File", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }  
        <div class="col-md-offset-2" style="padding-left:5px;">
            @using (Html.BeginForm("Delete", "Manager", new { Id = Model.Id }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button class="btn btn-danger" type="submit" style="position:relative;">
                    Удалить
                </button>
            }  
        </div>
            
</div>
