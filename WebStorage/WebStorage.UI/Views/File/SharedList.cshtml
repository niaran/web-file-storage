@model IEnumerable<WebStorage.Domain.Entities.SystemFile>

@{
    ViewBag.Title = "SharedList";
}

<h2>Список файлов и папок с общим доступом</h2>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Ссылка для доступа
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            /Shared/@Html.DisplayFor(modelItem => item.Sharing_Id)
        </td>
        <td>
            @Html.ActionLink(" ", "Info", new { id = item.Id }, new { @class = "glyphicon glyphicon-info-sign" })
            @Html.ActionLink(" ", "ShareOwnerOnly", new { id = item.Id }, new { @class = "glyphicon glyphicon-check" })
            @if (!item.IsFile)
            {
                @Html.ActionLink(" ", "Index", new { folderId = item.Id }, new { @class = "glyphicon glyphicon-folder-open " })

            }
        </td>
    </tr>
}

</table>
