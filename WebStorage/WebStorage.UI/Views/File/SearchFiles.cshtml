@model IEnumerable<WebStorage.Domain.Entities.SystemFile>

@{
    ViewBag.Title = "SearchFiles";
}

<h2>Список файлов, содержащих <strong>"@ViewBag.SearchString"</strong> в имени</h2>

<table class="table">
    <tr>
        <th>
            Имя
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (ViewBag.RootSharingId != null)
                {
                    @Html.ActionLink(" ", "Info","SharedFile", new { contentId = item.Id, rootSharingId = ViewBag.rootSharingId }, new { @class = "glyphicon glyphicon-info-sign" })

                }
                else
                {
                    @Html.ActionLink(" ", "Info", new { id = item.Id }, new { @class = "glyphicon glyphicon-info-sign" })
                    if (!item.IsFile)
                    {
                        @Html.ActionLink(" ", "Index", new { folderId = item.Id }, new { @class = "glyphicon glyphicon-folder-open " })

                    }
                }
            </td>
        </tr>
    }

</table>
